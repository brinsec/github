{
  "version": 2,
  "buildCommand": "echo 'API-only deployment, no build needed'",
  "outputDirectory": "public",
  "installCommand": "pnpm install",
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    }
  ]
}